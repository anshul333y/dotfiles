#!/bin/bash

# === Load environment variables from .env ===
ENV_FILE="$(dirname "$0")/../../.env"

if [ -f "$ENV_FILE" ]; then
  set -a
  source "$ENV_FILE"
  set +a
else
  echo "âŒ .env file not found. Please create one."
fi

API_KEY="$WALLHAVEN_API_KEY"

if [ -z "$API_KEY" ]; then
  echo "âŒ WALLHAVEN_API_KEY not set in .env file."
fi

# === Config ===
SAVE_DIR="$HOME/Pictures/save"
WALLPAPER_DIR="$HOME/Pictures/wall"
RESOLUTION="1920x1080"
CATEGORIES="111" # All categories
PURITY="111"     # All purity levels
ORDER="desc"     # Default order
MAX_PAGES=2

# Prompt for sorting
echo "Choose sorting option:"
echo "1) random"
echo "2) relevance"
echo "3) date_added"
echo "4) views"
echo "5) favorites"
echo "6) toplist"

read -p "Enter choice [1-6]: " sort_choice
case "$sort_choice" in
1) SORTING="random" ;;
2) SORTING="relevance" ;;
3) SORTING="date_added" ;;
4) SORTING="views" ;;
5) SORTING="favorites" ;;
6) SORTING="toplist" ;;
*)
  echo "Invalid choice. Defaulting to 'random'."
  SORTING="random"
  ;;
esac

mkdir -p "$SAVE_DIR"
mkdir -p "$WALLPAPER_DIR"

IMAGE_URLS=()
PAGE=1

echo "ðŸ“¡ Fetching wallpapers..."

while [ "$PAGE" -le "$MAX_PAGES" ]; do
  RESPONSE=$(curl -sG "https://wallhaven.cc/api/v1/search" \
    --data-urlencode "apikey=$API_KEY" \
    --data-urlencode "categories=$CATEGORIES" \
    --data-urlencode "purity=$PURITY" \
    --data-urlencode "resolutions=$RESOLUTION" \
    --data-urlencode "sorting=$SORTING" \
    --data-urlencode "order=$ORDER" \
    --data-urlencode "page=$PAGE")

  NEW_URLS=($(echo "$RESPONSE" | jq -r '.data[].path'))

  if [ ${#NEW_URLS[@]} -eq 0 ]; then
    echo "No more wallpapers found."
    break
  fi

  IMAGE_URLS+=("${NEW_URLS[@]}")
  ((PAGE++))
done

TOTAL=${#IMAGE_URLS[@]}
COUNT=0

echo "â¬‡ï¸ Downloading $TOTAL wallpapers..."

for URL in "${IMAGE_URLS[@]}"; do
  ((COUNT++))
  FILENAME=$(basename "$URL")

  # Download with retry
  curl -s --retry 3 --retry-delay 2 --fail "$URL" -o "$SAVE_DIR/$FILENAME" >/dev/null

  # Calculate progress
  PERCENT=$((COUNT * 100 / TOTAL))
  FILLED=$((PERCENT / 2))
  EMPTY=$((50 - FILLED))

  BAR=$(printf "%0.s#" $(seq 1 $FILLED))
  BAR+=$(printf "%0.s." $(seq 1 $EMPTY))

  echo -ne "\rProgress: [${BAR}] $PERCENT% ($COUNT/$TOTAL)"
done

echo -e "âœ… Download complete! Saved to: $SAVE_DIR"
echo "âœ… Previewing wallpapers..."

sxiv -t "$SAVE_DIR"/*

echo "Moving wallpapers to final folder..."
mv "$SAVE_DIR"/* "$WALLPAPER_DIR"

echo "Done! Wallpapers are in $WALLPAPER_DIR"
